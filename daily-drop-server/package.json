{
  "name": "daily-drop-server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev-node": "nodemon",
    "build": "tsc",
    "script": "cd src/scripts && ts-node",
    "start": "json-server -p 3001 -w db.json",
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn --transpileOnly -r esm src/scripts/seedDb.ts",
    "prod": "tsc && node ./build/app.js",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/app/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "seed-ts": "node dist/scripts/seedDb.js",
    "seedDb": "tsc && npm run seed-ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/mongodb": "^3.5.23",
    "@types/node": "^14.0.13",
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "json-server": "^0.16.1",
    "mongodb": "^3.5.8",
    "mongoose": "^5.9.18",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
